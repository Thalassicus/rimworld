<?xml version="1.0" encoding="utf-8" ?>
<Defs> 
  <ThingDef ParentName="PlantBase">
    <defName>Plant_Wildflower</defName>
    <label>wildflowers</label>
    <description>A scattering of various colorful wildflower seeds.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>10</Beauty>
      <Nutrition>0.05</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plant/Wildflower</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <hideAtSnowDepth>0.5</hideAtSnowDepth>
    <ingestible />
    <plant>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>1</growDays>
      <sowWork>50</sowWork>
			<lifespanDaysPerGrowDays>20</lifespanDaysPerGrowDays>
			<sowTags>
        <li>Ground</li>
				<li>Decorative</li>
      </sowTags>
      <fertilityMin>0.05</fertilityMin>
      <maxMeshCount>25</maxMeshCount>
      <visualSizeRange>
        <min>0.3</min>
        <max>0.4</max>
      </visualSizeRange>
      <topWindExposure>0.3</topWindExposure>
      <wildClusterRadius>4</wildClusterRadius>
      <wildClusterWeight>8</wildClusterWeight>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>

  <!-- ================= Dirt ================= -->   
	<DesignatorDropdownGroupDef>
		<defName>ThalFloorDirt</defName>
	</DesignatorDropdownGroupDef>
  
	<TerrainDef Name="ThalDirtBase" ParentName="FloorBase" Abstract="True">
		<edgeType>FadeRough</edgeType>
		<pathCost>2</pathCost>
		<scatterType>Rocky</scatterType>
		<resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
    <statBases>
      <WorkToBuild>2000</WorkToBuild>	  
      <Beauty>-1</Beauty>
      <Cleanliness>-1</Cleanliness>
    </statBases>
    <affordances>
			<li>Light</li>
			<li>Medium</li>
			<li>Heavy</li>
			<li>Diggable</li>
		</affordances>
		<generatedFilth>Filth_Dirt</generatedFilth>
		<takeFootprints>True</takeFootprints>
    <acceptTerrainSourceFilth>False</acceptTerrainSourceFilth>
		<designatorDropdown>ThalFloorDirt</designatorDropdown>
		<tools>
			<li>
				<label>dirt</label>
				<capacities>
					<li>KickMaterialInEyes</li>
				</capacities>
				<hediff>DirtInEyes</hediff>
				<cooldownTime>1.5</cooldownTime>
			</li>
		</tools>
  </TerrainDef> 
  
  <TerrainDef ParentName="ThalDirtBase">
    <defName>ThalPackedDirt</defName>
    <label>packed ground</label>
    <description>Hard-packed ground allows people to walk faster than natural soil, and prevents plant growth.</description>		
    <texturePath>Terrain/Surfaces/PackedDirt</texturePath>
    <renderPrecedence>360</renderPrecedence>
    <pathCost>1</pathCost>
    <fertility>0</fertility>
    <statBases>
      <WorkToBuild>250</WorkToBuild>	  
      <Beauty>-1</Beauty>
      <Cleanliness>-1</Cleanliness>
    </statBases>
  </TerrainDef>
  
  <TerrainDef ParentName="ThalDirtBase">
    <defName>ThalStonySoil</defName>
    <label>salted ground</label>
    <description>Salting the ground prevents plant growth, perfect for fire breaks.</description>		
    <texturePath>Terrain/Surfaces/Misc/DrySoil</texturePath>
    <renderPrecedence>360</renderPrecedence>
    <pathCost>2</pathCost>
    <fertility>0</fertility>
    <statBases>
      <WorkToBuild>250</WorkToBuild>	  
      <Beauty>-1</Beauty>
      <Cleanliness>-1</Cleanliness>
    </statBases>
  </TerrainDef>
  
  <TerrainDef ParentName="ThalDirtBase">
    <defName>ThalMarshyGround</defName>
    <label>marshy ground</label>
    <description>Dig out a pit for water to pool, creating marshy ground. Marsh slows people down more than mud, but allows plant growth.</description>		
    <texturePath>Terrain/Surfaces/MarshyTerrain</texturePath>
    <renderPrecedence>338</renderPrecedence>
    <pathCost>15</pathCost>	
    <fertility>1</fertility>
    <avoidWander>true</avoidWander>
    <traversedThought>SoakingWet</traversedThought>
    <tools>
      <li>
        <label>mud</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>MudInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </TerrainDef>
  
  <TerrainDef ParentName="ThalDirtBase">
    <defName>ThalMuddyGround</defName>
    <label>muddy ground</label>
    <description>Dig out a pit for water to pool, then salt it, creating infertile muddy ground. Mud slows people down less than marsh, but prevents plant growth.</description>
    <texturePath>Terrain/Surfaces/Mud</texturePath>
    <renderPrecedence>331</renderPrecedence>
    <pathCost>12</pathCost>	
    <fertility>0</fertility>
    <avoidWander>true</avoidWander>
    <tools>
      <li>
        <label>mud</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>MudInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </TerrainDef>

	<TerrainDef ParentName="ThalDirtBase">
		<defName>GT_SoilTilled</defName>
		<label>plowed soil</label>
		<description>Plow the ground to plant crops.</description>
		<texturePath>Terrain/Surfaces/Misc/SoilTilled</texturePath>
		<renderPrecedence>334</renderPrecedence>
		<terrainAffordanceNeeded>GrowSoil</terrainAffordanceNeeded>
		<pathCost>5</pathCost>
		<affordances Inherit="False">
			<li>Light</li>
			<li>Medium</li>
			<li>Heavy</li>
			<li>GrowSoil</li>
			<li>Diggable</li>
		</affordances>
		<fertility>1.4</fertility>
		<avoidWander>true</avoidWander>
	</TerrainDef>

  <!-- ============== Terraforming ============= -->
	<DesignatorDropdownGroupDef>
		<defName>ThalTerraforming</defName>
	</DesignatorDropdownGroupDef>

  <TerrainDef>
		<defName>ThalRockToSoil</defName>
		<label>soil</label>
		<description>Permanently dump soil on rock, allowing plants to grow.</description>
		<texturePath>Terrain/Surfaces/Soil</texturePath>
		<statBases Inherit="False">
			<Beauty>-1</Beauty>
			<Cleanliness>-1</Cleanliness>
			<WorkToBuild>2000</WorkToBuild>
		</statBases>
    <designationCategory>Floors</designationCategory>
    <constructEffect>ConstructDirt</constructEffect>
		<terrainAffordanceNeeded>SmoothableStone</terrainAffordanceNeeded>
		<designatorDropdown>ThalTerraforming</designatorDropdown>

    <edgeType>FadeRough</edgeType>
    <renderPrecedence>340</renderPrecedence>
    <pathCost>2</pathCost>
    <scatterType>Rocky</scatterType>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <li>GrowSoil</li>
      <li>Diggable</li>
    </affordances>
    <generatedFilth>Filth_Dirt</generatedFilth>
    <fertility>1.0</fertility>
    <takeFootprints>True</takeFootprints>
    <tools>
      <li>
        <label>dirt</label>
        <capacities>
          <li>KickMaterialInEyes</li>
        </capacities>
        <hediff>DirtInEyes</hediff>
        <cooldownTime>1.5</cooldownTime>
      </li>
    </tools>
  </TerrainDef>
  
  <!-- ================= Straw ================= -->   

  <TerrainDef ParentName="FloorBase">
    <defName>ThalStrawFloor</defName>
    <label>straw floor</label>
    <renderPrecedence>360</renderPrecedence>
    <description>Ground covered with straw</description>
    <texturePath>Terrain/Surfaces/Misc/StrawFloor</texturePath>
    <edgeType>FadeRough</edgeType>		
	  <burnedDef>ThalBurnedStrawFloor</burnedDef>	
