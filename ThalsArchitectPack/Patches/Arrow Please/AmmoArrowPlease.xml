<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Arrow Please</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Trebuchet_ShellsF"]/recipeMaker/recipeUsers</xpath>
					<value>
						<li>TableStonecutterElectric</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Arrow Please</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="Catapult_ShellsF"]/recipeMaker/recipeUsers</xpath>
					<value>
						<li>TableStonecutterElectric</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>