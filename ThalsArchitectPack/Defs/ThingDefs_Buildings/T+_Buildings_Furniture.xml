<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!--========================= Linkables =============================-->
  
  <ThingDef ParentName="TableGatherSpotBase">
    <defName>TableLinkable</defName>
    <label>table (linkable)</label>
	<thingClass>Building</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/Linked/tableLinkable_sheet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom1</li>
      </linkFlags>
    </graphicData>
	<building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/tableLinkable_sheet</texPath>
      </blueprintGraphicData>
    </building>
	<uiIconPath>Things/Building/Linked/tableLinkable_icon</uiIconPath>
    <statBases>
      <MaxHitPoints>25</MaxHitPoints>
      <WorkToBuild>375</WorkToBuild>
      <Mass>2.5</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>1</Beauty>
    </statBases>
	<stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <size>(1,1)</size>
	<neverMultiSelect>true</neverMultiSelect>
    <costStuffCount>15</costStuffCount>
    <rotatable>false</rotatable>
	<placingDraggableDimensions>2</placingDraggableDimensions>
  </ThingDef>
  
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>StoolLinkable</defName>
    <label>stool (linkable)</label>
    <graphicData>
      <texPath>Things/Building/Linked/stoolLinkable_sheet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <linkType>Basic</linkType>
      <linkFlags>
        <li>Custom2</li>
      </linkFlags>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
      </shadowData>
      <damageData>
        <rectN>(0.125,0.296875,0.734375,0.421875)</rectN>
        <rectS>(0.125,0.296875,0.734375,0.421875)</rectS>
        <rectE>(0.234375,0.296875,0.5,0.546875)</rectE>
        <rectW>(0.234375,0.296875,0.5,0.546875)</rectW>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
	<uiIconPath>Things/Building/Linked/stoolLinkable_icon</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>750</WorkToBuild>
      <Mass>3</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>1</Beauty>
      <Comfort>0.5</Comfort>
    </statBases>
	<building>
			<isSittable>true</isSittable>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
      <blueprintGraphicData>
        <texPath>Things/Building/Linked/stoolLinkable_sheet</texPath>
      </blueprintGraphicData>
    </building>
    <description>A simple platform on which to sit. You can use more than one of these to form larger benches.</description>
    <socialPropernessMatters>true</socialPropernessMatters>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>15</costStuffCount>
    <pathCost>30</pathCost>
    <fillPercent>0.20</fillPercent>
	<placingDraggableDimensions>1</placingDraggableDimensions>
  </ThingDef>

</Defs>