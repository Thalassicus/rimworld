<?xml version="1.0" encoding="utf-8"?>
<Defs>
	
<!-- Stun Bullet -->

	<ThingDef Class="RimTaser.ThingDef_RimTaser_HediffBullet" ParentName="BaseBullet">
		<defName>Stun_Bullet</defName>
		<label>Stun Bullet</label>
		<graphicData>
			<texPath>Things/Projectile/StunBullet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile>
      <damageDef>Stun</damageDef>
			<damageAmountBase>2</damageAmountBase>
			<stoppingPower>5</stoppingPower>
			<speed>70</speed>
		</projectile>
		<AddHediffChance>1.0</AddHediffChance>
		<HediffsToAdd>
			<li>Neurostun</li>
		</HediffsToAdd>
		<thingClass>RimTaser.Projectile_RimTaser_Cartridge</thingClass>
	</ThingDef>
	
<!-- Stun Gun -->

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>StunGun</defName>
		<label>Stun Gun</label>
		<description>A less-lethal pistol that disrupts neurological function in the target. Bypasses energy shields.</description>
		<graphicData>
			<texPath>Things/WeaponRanged/StunGun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Interact_Revolver</soundInteract>
		<statBases>
			<WorkToMake>4000</WorkToMake>
			<Mass>1.4</Mass>
			<AccuracyTouch>0.99</AccuracyTouch>
			<AccuracyShort>0.95</AccuracyShort>
			<AccuracyMedium>0.8</AccuracyMedium>
			<AccuracyLong>0.6</AccuracyLong>
			<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
		</statBases>
		<recipeMaker>
			<skillRequirements>
				<Crafting>4</Crafting>
			</skillRequirements>
		</recipeMaker>
		<weaponTags>
			<li>SimpleGun</li>
			<li>Shield_Sidearm</li>
		</weaponTags>
		<tradeTags>
			<li>StunGun</li>
		</tradeTags>
		<costList>
			<Steel>30</Steel>
			<ComponentIndustrial>4</ComponentIndustrial>
		</costList>
		<equippedStatOffsets>
      <ShootingAccuracyPawn>10</ShootingAccuracyPawn>
		</equippedStatOffsets>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Stun_Bullet</defaultProjectile>
				<warmupTime>1</warmupTime>
				<range>20.9</range>
				<soundCast>StunGun</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>2</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>10</power>
				<cooldownTime>2.3</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>7</power>
				<cooldownTime>1.2</cooldownTime>
			</li>
		</tools>
	</ThingDef>
	
