<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- Crossbow -->
  <ThingDef ParentName="BaseWeaponNeolithic">
    <defName>VWE_Bow_Crossbow</defName>
    <label>crossbow</label>
    <description>A crossbow is a type of ranged weapon in similar principle to a bow, consisting of a bow-like assembly mounted horizontally on a main frame, which is handheld in a similar fashion to the stock of a long gun.\n\nThis weapon attempt of early mankind can send a bolt even through strongest metal.</description> <!-- Your Text + Inspirations -->
    <graphicData>
      <texPath>Things/WeaponRanged/Crossbow</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Bow_Large</soundInteract>
    <costList>
      <WoodLog>100</WoodLog>
	  <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <techLevel>Medieval</techLevel>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <Mass>3.2</Mass>
      <AccuracyTouch>0.9</AccuracyTouch>
      <AccuracyShort>0.8</AccuracyShort>
      <AccuracyMedium>0.6</AccuracyMedium>
      <AccuracyLong>0.4</AccuracyLong>
      <RangedWeapon_Cooldown>2</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>NeolithicRangedHeavy</li>
	  <li>NeolithicRangedChief</li>
    </weaponTags>
    <recipeMaker>
	  <recipeUsers>
		<li>FueledSmithy</li>
		<li>ElectricSmithy</li>
	  </recipeUsers>
      <researchPrerequisite>Greatbow</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>VWE_Arrow_Bolt</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>15.9</range>
        <soundCast>VWE_Shot_Crossbow</soundCast> <!-- SoundDef missing -->
      </li>
    </verbs>
    <tools>
      <li>
        <label>limb</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>VWE_Arrow_Bolt</defName>
    <label>crossbow bolt</label>
    <graphicData>
      <texPath>Things/Projectile/Arrow_Bolt</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>false</flyOverhead>
      <damageDef>Arrow</damageDef>
      <damageAmountBase>10</damageAmountBase>
      <stoppingPower>5</stoppingPower>
	    <armorPenetrationBase>0.66</armorPenetrationBase>
      <speed>58</speed>
    </projectile>
  </ThingDef>

<!-- Musket -->
  <ThingDef ParentName="BaseHumanMakeableGun">
