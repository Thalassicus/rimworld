<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Glowstone</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="GLO_CutGlowstoneCluster"]/recipeUsers</xpath>
					<value>
						<li>TableStonecutterElectric</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Glowstone</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="GLO_CutLargeGlowstone"]/recipeUsers</xpath>
					<value>
						<li>TableStonecutterElectric</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Glowstone</li>
		</mods>	
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/RecipeDef[defName="GLO_CrushSmallGlowstone"]/recipeUsers</xpath>
					<value>
						<li>TableStonecutterElectric</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	
</Patch>